<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="dark_mode_toggle.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:dark_mode_toggle"
    mc:Ignorable="d"
    Title="Settings">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Padding="16">
        <StackPanel Spacing="16">
            <ToggleSwitch
                x:Name="ScheduleToggleSwitch"
                Header="Enable schedule"
                Toggled="OnScheduleToggle" />

            <TimePicker
                x:Name="StartTimePicker"
                Header="Light mode start"
                TimeChanged="OnStartTimeChanged" />

            <TimePicker
                x:Name="EndTimePicker"
                Header="Light mode end"
                TimeChanged="OnEndTimeChanged" />
            
            <TextBlock
                TextWrapping="Wrap"
                MaxWidth="480">
                Set your typical working hours above where you expect high levels of ambient light. 
                Outside of this period dark mode will be used.
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>

